<h2>商品詳細</h2>
<p>書籍名：<%= @book.book_name %></p>
<p>著者名：<%= @book.author_name %></p>
<p>発行日：<%= @book.issue_date %></p>
<p>価格：<%= number_to_currency(@book.price, unit: "¥", precision: 0) %></p>
<p>商品ステータス：<%= @book.status %></p>
<%= form_with url: add_item_cart_path, local: true do |f| %>
  <%= hidden_field_tag :book_id, @book.id %>
  <%= number_field_tag :quantity, 1, min: 1 %>
  <%= f.submit "買い物かごに入れる" %>
<% end %>
