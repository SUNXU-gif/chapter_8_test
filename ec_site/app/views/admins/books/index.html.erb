<h2>書籍一覧</h2>
<%= link_to "新規書籍", new_admins_book_path %> |
<%= link_to "新規タグ", new_admins_tag_path %> |
<%= link_to "タグ一覧", admins_tags_path %> |
<%= link_to "ログアウト", admins_sign_out_path, data: { turbo_method: :delete } %>
<hr>
<% @books.each do |b| %>
  <% if b.image.attached? %>
    <%= image_tag b.image.variant(resize_to_limit: [140,140]) %>
  <% end %>
  <p>書籍名：<%= b.book_name %></p>
  <p>著者名：<%= b.author_name %></p>
  <p>発行日：<%= b.issue_date %></p>
  <p>商品表示：<%= b.product_display ? "true" : "false" %></p>
  <p>価格：<%= number_to_currency(b.price, unit: "¥", precision: 0) %></p>
  <p>ステータス：<%= b.status %></p>
  <%= link_to "書籍詳細", admins_book_path(b) %>
  <hr>
<% end %>
