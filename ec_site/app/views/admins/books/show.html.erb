<% if @book.image.attached? %>
  <%= image_tag @book.image.variant(resize_to_limit: [180,180]) %>
<% end %>
<p>書籍名：<%= @book.book_name %></p>
<p>著者名：<%= @book.author_name %></p>
<p>発行日：<%= @book.issue_date %></p>
<p>商品表示：<%= @book.product_display ? "true" : "false" %></p>
<p>価格：<%= number_to_currency(@book.price, unit: "¥", precision: 0) %></p>
<p>ステータス：<%= @book.status %></p>
<p>タグ名：<%= @book.tags.pluck(:tag_name).join("、") %></p>
<%= link_to "編集", edit_admins_book_path(@book) %> |
<%= button_to "削除", admins_book_path(@book), method: :delete, data: { turbo_confirm: "削除しますか？" } %>
